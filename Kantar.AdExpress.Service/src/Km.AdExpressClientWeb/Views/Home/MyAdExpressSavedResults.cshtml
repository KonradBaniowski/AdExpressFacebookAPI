            <div class="modal-body">
                <p> @Model.Labels.RenameSelectedFolder</p>
                <input type="text" class="form-control" id="new@(Model.UniversType)Name" placeholder="Entrez un nom">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-valider" id="btnRename@(Model.UniversType)" data-dismiss="modal">@Model.Labels.Submit</button>
            </div>
        </div>
    </div>
</div>

