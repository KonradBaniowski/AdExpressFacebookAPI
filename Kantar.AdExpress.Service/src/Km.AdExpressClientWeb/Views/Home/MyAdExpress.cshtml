@model  Km.AdExpressClientWeb.Models.Home.MyAdExpressViewModel
    @using Kantar.AdExpress.Service.Core.Domain;
@{
    ViewBag.Title = "MyAdExpress";
    Layout = "~/Views/Shared/_LayoutMyAdExpress.cshtml";
}

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h1 class=""><i class="icon-user blue"></i>&nbsp;@Model.PresentationModel.ModuleTitle</h1>
            <small class="">@Model.PresentationModel.ModuleDescription</small>
        </div>
    </div>

    <div class="row">
        <ul id="tab-myadexpress" class="nav nav-tabs">
            <li role="presentation" class="active"><a href="#@(UniversType.Result)" data-toggle="tab">@Model.Labels.MyResults</a></li>
            <li role="presentation"><a href="#@(UniversType.Univers)" data-toggle="tab">@Model.Labels.UserUniversCode</a></li>
            <li role="presentation"><a href="#alertes" data-toggle="tab">@Model.Labels.AlertsCode</a></li>
        </ul>
        <div id="tab-content-myadexpress" class="tab-content">
            
            @Html.Partial("MyAdExpressSavedResults", Model.SavedResults)
            
            @Html.Partial("MyAdExpressSavedResults", Model.SavedUnivers)


            <div role="tabpanel" class="tab-pane" id="alertes">
                <div class="panel panel-default panel-tab">
                    <div class="panel-heading resume">

                        @if (Model.Alerts != null && Model.Alerts.Any())
                    {
                            <h3 class="panel-title pull-left">
                                <span class="blue">@Model.Alerts.Count()</span> @Model.Labels.Directories,  <span class="blue">@Model.Alerts.Sum(p => p.Occurrences.Count())</span> @Model.Labels.Occurrences
                            </h3>
                            <h3 class="panel-title pull-right">
                                <a href="#myModal1" data-toggle="modal" title="Ajouter un répertoire" class="m-r-xs adExpress-tools"><i class="fa icon-plus text-md"></i></a>
                                <a href="#myModal3" data-toggle="modal" title="Renommer un répertoire" class="m-r-xs adExpress-tools"><i class="fa icon-pencil text-md"></i></a>
                                <a href="#myModal2" data-toggle="modal" title="Supprimer un répertoire"><i class="fa icon-trash text-md adExpress-tools"></i></a>
                            </h3>
                    }
                    else
                    {
                            <h3 class="panel-title pull-left">
                                <span>@Model.Labels.NoAlerts</span>
                            </h3>
                    }
                        <div class="clearfix"></div>
                    </div>

                    <div class="panel-body">
                        @if (Model.Alerts != null && Model.Alerts.Any())
                    {
                        foreach (var item in Model.Alerts)
                        {
                                <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                                    <div class="panel panel-primary">
                                        <div class="panel-heading" role="tab" id="headingOne">
                                            <h4 class="panel-title">
                                                <a class="btn-block" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse@(item.Id)" aria-expanded="true" aria-controls="collapseOne">
                                                    @item.Title
                                                    <i class="indicator glyphicon  pull-right glyphicon-chevron-down"></i>
                                                </a>
                                            </h4>
                                        </div>

                                        <div id="collapse@(item.Id)" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                            <div class="panel-body">

                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <h4><i class="fa fa-clock-o fa-lg"></i>&nbsp;@Model.Labels.Occurrences</h4>
                                                        <ul class="list-group b-r">
                                                            @foreach (var occurence in item.Occurrences)
                                                        {
                                                                <li class="list-group-item">
                                                                    <span> @Model.Labels.SendDate @occurence.SendDate.Date.ToShortDateString() </span>
                                                                    <div class="pull-right">
                                                                        <a data-id="@occurence.Id" class="btnLoadSession" data-type="Alerts">
                                                                            <i class="fa fa-search fa-lg"></i>
                                                                        </a>
                                                                    </div>
                                                                </li>
                                                        }
                                                        </ul>
                                                    </div>

                                                    <div class="col-lg-6">
                                                        <h4><i class="fa fa-bell-o fa-lg"></i>&nbsp;@Model.Labels.AlertsDetails</h4>
                                                        <div class="row">
                                                            <div class="col-lg-6">
                                                                <ul class="list-group">
                                                                    <li class="list-group-item">
                                                                        @Model.Labels.Periodicity  @item.PeriodicityDescription
                                                                    </li>
                                                                    <li class="list-group-item">
                                                                        @Model.Labels.Deadline @item.Frequency @item.PeriodicityValue
                                                                    </li>
                                                                    <li class="list-group-item">
                                                                        @Model.Labels.TimeSchedule	@item.TimeSchedule
                                                                    </li>
                                                                    <li class="list-group-item">
                                                                        @Model.Labels.ExpirationDate @item.ExpirationDate.ToShortDateString()
                                                                    </li>
                                                                    <li class="list-group-item">
                                                                        @Model.Labels.AlertType @item.Module
                                                                    </li>
                                                                    <li class="list-group-item">
                                                                        @Model.Labels.Receiver @item.Recipients
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>

                                            </div>
                                        </div>

                                    </div>
                                </div>
                        }
                    }
                    </div>

                </div>
            </div>
        </div>
    </div>

@section scripts {
    @Scripts.Render("~/bundles/myAdExpress")
}
