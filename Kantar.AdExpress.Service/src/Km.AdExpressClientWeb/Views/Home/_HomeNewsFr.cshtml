@model Kantar.AdExpress.Service.Core.Domain.News

@*<p class="text-center">@(Model.Labels.NewsDescr)</p>*@
@*IMG ACCUEIL*@
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 padding-lr-10 padding-b-15">
    <a target="_blank" href="http://www.pickanews.com/">
        <img src="../Content/img/Pickanews-Adexpress-2.jpg" class="img-responsive" alt="Pickanews - Kantar Media">
    </a>
</div>
@*PANEL INFO*@
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 padding-lr-10">
    <div class="panel panel-default panel-home">
        <div class="panel-heading">
            <h4><i class="icon-bubble white"></i> Informations</h4>
        </div>
        <div class="panel-body information-fixed">
        <div class="media">
        
            @foreach (var newsItem in Model.NewsList)
            {
                <div class="media-body">
                    <div class="date pull-left">
                        <h4 class="text-center"><strong>@newsItem.Day</strong></h4>
                        <h4 class="text-center"><small>@newsItem.Month</small></h4>
                    </div>
                    <div class="title pull-left information-title-width">
                        <h4 class="information-title">@newsItem.Title</h4>
                        <em>@newsItem.Author</em>
                    </div>
                    <div class="clearfix"></div>
                    <div class="content">
                        @Html.Raw(newsItem.Content)
                        <br />
                    </div>
                </div>
            }
        </div>
        </div>
    </div>
</div>
