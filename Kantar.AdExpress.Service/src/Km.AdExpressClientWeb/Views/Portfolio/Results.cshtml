                        else {
                            message = $('#Labels_ResultError').val() + '. ' + $('#Labels_WarningBackNavigator').val();
                            bootbox.alert(message);
                            $("#gridLoader").addClass("hide");
                        }
                    },
                    success: function (data) {
                        if (data != null && data != "") {

                            if (data.hasMoreThanMaxRowsAllowed) {
                                $("#allPeriodInsertionsSpots").hide();
                                $("#GridPanel").show();
                                $("#gridEmpty").show();
                                $("#gridEmpty").html("<div style='text-align:left'>@Model.Labels.MaxAllowedRows" + "<br\><ul><li>" + "@Model.Labels.MaxAllowedRowsBis" + "</li><li>" + "@Model.Labels.MaxAllowedRowsRefine" + "</li></ul></div>");
                            }
                            else {

                                if (data.linkAllPeriod != null || data.linkAllPeriod != "null") {
                                    //TODO : à faire autrement
                                    $("#allPeriodInsertionsSpots").html(data.linkAllPeriod);
                                    $("#allPeriodInsertionsSpots").show();
                                }

                                if(data.datagrid != null && data.datagrid != "null" ){
                                    $("#GridPanel").show();
                                    dataTreeGrid = data.datagrid;
                                    cols = GetColumnsFormatter(data.columns);
                                    colsFixed = data.columnsfixed;
                                    columnsNotAllowedSorting = data.columnsNotAllowedSorting;
                                    needFixedColumns = data.needfixedcolumns;

                                    columnIndex = data.sortKey;
                                    createCookie("sortKey", columnIndex, 1);
                                    var gridOrder = data.sortOrder;
                                    switch (gridOrder) {
                                        case 0:
                                            sortOrder = "DESC";
                                            createCookie("sortOrder", 0, 1);
                                            break;
                                        case 1:
                                            sortOrder = "ASC";
                                            createCookie("sortOrder", 1, 1);
                                            break;
                                        case 2:
                                            sortOrder = "NONE";
                                            createCookie("sortOrder", 2, 1);
                                            break;
                                        default:
                                            sortOrder = "NONE";
                                            createCookie("sortOrder", 2, 1);
                                            break;
                                    }

                                    if(columnsNotAllowedSorting == null)
                                        columnsNotAllowedSorting = [];

                                    var schema = new $.ig.DataSchema("array", {
                                        fields: data.schema
                                    });

                                    ds = new $.ig.DataSource({
                                        type: "json",
                                        schema: schema,
                                        dataSource: dataTreeGrid,
                                        callback: renderGrid
                                    });

                                    ds.dataBind();
                                }else{
                                    $("#GridPanel").hide();
                                }




                                if (userFilter.ResultTypeFilter.ResultType == "4"){
                                    $("#ChartPanel").show();
                                    CallPortfolioGraphResult();
                                }

                                if (userFilter.ResultTypeFilter.ResultType == "3"){
                                    $(".exportTypes.bootstrap-select").hide();
                                    $("#btn-export").hide();
                                }else{
                                    $(".exportTypes.bootstrap-select").show();
                                    $("#btn-export").show();
                                }
                            }
                        }
                        else {
                            $("#GridPanel").show();
                            $("#grid").addClass("hide");
                            $("#allPeriodInsertionsSpots").hide();
                            $("#gridEmpty").show();
                        }


                         if (@isCarouselVisible && (userFilter.ResultTypeFilter.ResultType == "0" || userFilter.ResultTypeFilter.ResultType == "3")) {
                            $("#carou-vehicleView").hide();
                             VehicleCarouselAsync(userFilter.ResultTypeFilter.ResultType, LABEL_NB_INSERTION, LABEL_TOTAL_INVEST);

                         }
                    }
