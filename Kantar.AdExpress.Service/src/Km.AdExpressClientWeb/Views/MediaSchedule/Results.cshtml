                $(".open-media-schedule").on('click', function (e) {
                    $("#perioddetailTypeContainer").removeClass("show").addClass("hide");
                    GetSubPeriodSelection('' + $(this).attr("date"));
                    $("#grid").addClass("hide");
                    $("#gridLoader").removeClass("hide");
