        CallMediaScheduleResult(zoomDate);

        function GetSubPeriodSelection(zoomDateParam) {
            var params = {
                zoomDate: zoomDateParam
            };
            $.ajax({
                url: '@Url.Action("SubPeriodSelection", "MediaSchedule")',
                contentType: "application/x-www-form-urlencoded",
                type: "POST",
