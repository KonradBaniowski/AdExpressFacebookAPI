                        <div class="col-md-4">
                            <div class="panel-primary panel-options-results">
                                <div class="panel-heading head-options-results">
                                    <p class="panel-title options ">
                                        Format
                                    </p>
                                </div>
                                <div id="collapseFive" class="panel-collapse collapse in">
                                    <div class="panel-body mi-padder">
                                        <div class="selectoptioncontainer">
                                            <select id="@Model.FormatOption.Format.Id" class="selectdatepicker" multiple>
                                                @foreach (var item in Model.FormatOption.Format.Items)
                                                {
                                                    if (Model.FormatOption.Format.SelectedId.Contains(item.Value))
                                                    {
                                                        <option value="@item.Value" selected>@item.Text</option>
                                                    }
                                                    else if (!item.Enabled)
                                                    {
                                                        <option value="@item.Value" disabled>@item.Text</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@item.Value">@item.Text</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        optionsNb++;
                        if (optionsNb == 3)
                        {
                            optionsNb = 0;
                            @Html.Raw("</div><div class='row'>");
                        }
                    }
                    @if (@Model.PurchaseModeOption.PurchaseMode.Visible)
                    {
                        <div class="col-md-4">
                            <div class="panel-primary panel-options-results">
                                <div class="panel-heading head-options-results">
                                    <p class="panel-title options ">
                                        @GestionWeb.GetWebWord(3016, Model.SiteLanguage)
