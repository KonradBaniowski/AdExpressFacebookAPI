@model Kantar.AdExpress.Service.Core.Domain.ResultOptions.Options

<div class="panel-sans text-left options-control">
    <div class="panel-heading text-left">
        <i class="fa fa-cog text-lg orange "></i>
        <h4 class="font-normal m-t-none m-b-md orange">Options d'analyse</h4>
    </div>
    <div class="padder-v bg-dark">
        <div class="panel-group panel-options-results" id="accordion">
            <div class="panel-primary panel-options-results">
                <div class="panel-heading head-options-results">
                    <p class="panel-title options ">
                        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                            Unité
                            <i class="indicator glyphicon glyphicon-chevron-down  pull-right"></i>
                        </a>
                    </p>
                </div>
                <div id="collapseOne" class="panel-collapse collapse">
                    <div class="panel-body mi-padder">
                        <div class="selectoptioncontainer">
                            <select id="@Model.UnitOption.Unit.Id" class="selectdatepicker">
                                @foreach (var item in Model.UnitOption.Unit.Items)
                                {
                                    if (item.Value == Model.UnitOption.Unit.SelectedId)
                                    {
                                        <option value="@item.Value" selected>@item.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            @if (@Model.InsertionOption.Insertion.Visible) { 
                <div class="panel-primary panel-options-results">
                    <div class="panel-heading head-options-results">
