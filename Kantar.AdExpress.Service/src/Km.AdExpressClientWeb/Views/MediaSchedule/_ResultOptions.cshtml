@model Kantar.AdExpress.Service.Core.Domain.ResultOptions.Options
@using TNS.AdExpress.Domain.Translation;
@using TNS.AdExpress.Domain.Web;
@{
    var optionsNb = 1;
    var classHide = "";
    string multiple = Model.UnitOption.Unit.EnableMultiple ? "multiple" : string.Empty;
}

<div class="panel-group panel-group-results panel-group-options" id="media-accordion" role="tablist" aria-multiselectable="true">
    <div class="panel panel-primary panel-options">
        <a role="button" data-toggle="collapse" data-parent="#media-accordion" href="#collapseContainerOne" aria-expanded="true" aria-controls="collapseContainerOne">
            <div class="panel-heading head-results bg-violet" role="tab" id="headingOne">
                <h3 class="panel-title pull-left">

                    <i class="fa fa-cog text-lg"></i> @GestionWeb.GetWebWord(792, Model.SiteLanguage)
                    <i class="indicator glyphicon glyphicon-chevron-down  pull-right"></i>
                </h3>
                <div class="clearfix"></div>
            </div>
        </a>
        <div id="collapseContainerOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
            <div class="panel-sans text-left options-control">
                <div class="row">
                    <div class="col-md-4">
                        <div class="panel-primary panel-options-results">
                            <div class="panel-heading head-options-results">
                                <p class="panel-title options ">
                                    @GestionWeb.GetWebWord(304, Model.SiteLanguage)
                                </p>
                            </div>
                            <div id="collapseOne" class="panel-collapse collapse in">
                                <div class="panel-body mi-padder">
                                    <div class="selectoptioncontainer">
                                        <select id="@Model.UnitOption.Unit.Id" class="selectdatepicker" @multiple>
                                            @foreach (var item in Model.UnitOption.Unit.Items)
                                            {
                                                if ( Model.UnitOption.Unit.SelectedIds.Contains(item.Value))
                                                {
                                                    <option value="@item.Value" selected>@item.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Value">@item.Text</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @if (@Model.InsertionOption.Insertion.Visible)
                    {
                        <div class="col-md-4">
                            <div class="panel-primary panel-options-results">
                                <div class="panel-heading head-options-results">
                                    <p class="panel-title options ">
                                        @GestionWeb.GetWebWord(1400, Model.SiteLanguage)
                                    </p>
                                </div>
                                <div id="collapseTwo" class="panel-collapse collapse in">
                                    <div class="panel-body mi-padder">
                                        <div class="selectoptioncontainer">
                                            <select id="@Model.InsertionOption.Insertion.Id" class="selectdatepicker">
                                                @foreach (var item in Model.InsertionOption.Insertion.Items)
                                                {
                                                    if (item.Value == Model.InsertionOption.Insertion.SelectedId)
                                                    {
                                                        <option value="@item.Value" selected>@item.Text</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@item.Value">@item.Text</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        optionsNb++;
                    }
                    @if (@Model.AutoPromoOption.AutoPromo.Visible)
                    {
