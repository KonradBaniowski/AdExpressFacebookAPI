@using Km.AdExpressClientWeb.Models;
@using TNS.AdExpress.Domain.Translation
@using TNS.AdExpress.Domain.Web
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutPublic2.cshtml";
}

<!--Start New version -->

<div class="ui-widget">
    @Html.ValidationSummary(true, "", new { @class = "ui-state-error ui-corner-all", style = "padding: 0 .7em" })
</div>

<div id="login_component">
    <div id="loginwidget">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", id = "formLogin" }))
        {
            @Html.AntiForgeryToken()

            <div class="loginbox_container">
                <div id="usrn">
                    <div>
                        @Html.TextBoxFor(m => m.Email, new { @class = "input", placeholder = Model.Labels.UserName, id = "username", autocomplete = "off", tabindex = "1" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="loginbox_container">
                <div id="pswd">
                    <div>
                        @Html.PasswordFor(m => m.Password, new { @class = "input", placeholder = Model.Labels.Password, id = "pwd", autocomplete = "off", tabindex = "3" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="loginbox_container">
                <input id="signin" type="submit" value="@(Model.Labels.SignIn)" class="ui-button ui-widget ui-state-default ui-corner-all" role="button" aria-disabled="false" tabindex="3">
            </div>
            <div id="forgot" class="loginbox_container">
                <span>   </span>
                <div class="forgotcontact">@Model.Labels.AccountFindOutMoreLabel <a href="@Url.Action("Index", "Contact", new {siteLanguage = Model.SiteLanguage})">@Model.Labels.FindOutMoreLabel</a></div>
            </div>
            <input type="hidden" id="current-site-language" name="SiteLanguage" value="@Model.SiteLanguage" />
        }
            </div>

</div>

<!--End New version -->


@Html.HiddenFor(e => e.ErrorMessage)
@if (WebApplicationParameters.EnableGdpr)
{
    <input type="hidden" id="CookiesMessage" value="@GestionWeb.GetWebWord(3264, Model.SiteLanguage)" />
    <input type="hidden" id="MoreInfoLabel" value="@GestionWeb.GetWebWord(3245, Model.SiteLanguage)" />
    <input type="hidden" id="AcceptBtnLabel" value="@GestionWeb.GetWebWord(3265, Model.SiteLanguage)" />
    <input type="hidden" id="AdvancedBtnLabel" value="@GestionWeb.GetWebWord(3266, Model.SiteLanguage)" />
    <input type="hidden" id="CookieTypesTitle" value="@GestionWeb.GetWebWord(3267, Model.SiteLanguage)" />
    <input type="hidden" id="FixedCookieTypeLabel" value="@GestionWeb.GetWebWord(3248, Model.SiteLanguage)" />
    <input type="hidden" id="FixedCookieTypeDesc" value="@GestionWeb.GetWebWord(3249, Model.SiteLanguage)" />
    <input type="hidden" id="CookiesTitle" value="@GestionWeb.GetWebWord(3250, Model.SiteLanguage)" />
    <input type="hidden" id="CookieStat" value="@GestionWeb.GetWebWord(3268, Model.SiteLanguage)" />
    <input type="hidden" id="CookieStatDesc" value="@GestionWeb.GetWebWord(3269, Model.SiteLanguage)" />
    <input type="hidden" id="CookieDiagnostic" value="@GestionWeb.GetWebWord(3270, Model.SiteLanguage)" />
    <input type="hidden" id="CookieDiagnosticDesc" value="@GestionWeb.GetWebWord(3271, Model.SiteLanguage)" />
    <input type="hidden" id="SiteLanguage" value="@Model.SiteLanguage" />
    <input type="hidden" id="PolicyUpdateDate" value="@ViewBag.PolicyUpdateDate" />
    <input type="hidden" id="ForceCookieReInit" value="@ViewBag.ForceCookieReInit" />
}
<input type="hidden" id="current-url" value="/Account/Login" />



@section Scripts {
    @Scripts.Render("~/bundles/account")
    @if(WebApplicationParameters.EnableGdpr) {
        @Scripts.Render("~/bundles/gdpr")
    }
}
