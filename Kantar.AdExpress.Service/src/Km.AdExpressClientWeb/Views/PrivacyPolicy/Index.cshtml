@using TNS.AdExpress.Constantes.Web

@{
    ViewBag.Title = "Privacy Policy";
    Layout = "~/Views/Shared/_LayoutPrivacy.cshtml";
}

<div>
    @if (ViewBag.SiteLanguageCode.ToString().Equals(CountryCode.FRANCE))
    {
        Html.RenderPartial("_PrivacyPolicyFr");
    }
    else if(ViewBag.SiteLanguageCode.ToString().Equals(CountryCode.UK) || ViewBag.SiteLanguageCode.ToString().Equals(CountryCode.POLAND))
    {
        Html.RenderPartial("_PrivacyPolicyEn");
    }
    else if (ViewBag.SiteLanguageCode.ToString().Equals(CountryCode.SLOVAKIA))
    {
        Html.RenderPartial("_PrivacyPolicySk");
    }
    else if (ViewBag.SiteLanguageCode.ToString().Equals(CountryCode.FINLAND))
    {
        Html.RenderPartial("_PrivacyPolicyFi");
    }
</div>

<div class="reponsive-hide-xs row height20"></div>
<div class="reponsive-hide-xs row height20"></div>
