@model Kantar.AdExpress.Service.Core.Domain.ResultOptions.OptionsMediaSchedule
@using TNS.AdExpress.Domain.Translation;
@{
    string sloganClass = "";
}

<div class="panel-group panel-group-results panel-group-options" id="media-accordion" role="tablist" aria-multiselectable="true">
    <div class="panel panel-primary panel-options">
        <a role="button" data-toggle="collapse" data-parent="#media-accordion" href="#collapseContainerOne" aria-expanded="true" aria-controls="collapseContainerOne">
            <div class="panel-heading head-results bg-violet" role="tab" id="headingOne">
                <h3 class="panel-title pull-left">
                    <i class="fa fa-cog text-lg"></i> @GestionWeb.GetWebWord(792, Model.SiteLanguage)
                    <i class="indicator glyphicon glyphicon-chevron-down  pull-right"></i>
                </h3>
                <div class="clearfix"></div>
            </div>
        </a>
        <div id="collapseContainerOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
            <div class="panel-sans text-left options-control">
                <div class="row">
                    @if (Model.PeriodDetail.PeriodDetailType.Visible)
                    {
                        <div class="col-md-4">
                            <div id="perioddetailTypeContainer" class="panel-primary panel-options-results">
                                <div class="panel-heading head-options-results">
                                    <p class="panel-title options ">
                                        @GestionWeb.GetWebWord(2288, Model.SiteLanguage)
                                    </p>
                                </div>
                                <div id="collapseFour" class="panel-collapse collapse in">
                                    <div class="panel-body mi-padder">
                                        <div class="selectoptioncontainer">
                                            <select id="@Model.PeriodDetail.PeriodDetailType.Id" class="selectdatepicker">
                                                @foreach (var item in Model.PeriodDetail.PeriodDetailType.Items)
                                                {
                                                    if (item.Value == Model.PeriodDetail.PeriodDetailType.SelectedId)
                                                    {
                                                        <option value="@item.Value" selected>@item.Text</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@item.Value">@item.Text</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="col-md-4">
                        <div class="panel-primary panel-options-results">
                            <div class="panel-heading head-options-results">
                                <p class="panel-title options ">
                                    @GestionWeb.GetWebWord(1886, Model.SiteLanguage)
                                </p>
                            </div>
                            <div id="collapseHeight" class="panel-collapse collapse in">
                                <div class="panel-body mi-padder">
                                    <div class="selectoptioncontainer">
                                        <select id="@Model.GenericDetailLevel.DefaultDetail.Id" class="selectdatepicker">
                                            @foreach (var item in Model.GenericDetailLevel.DefaultDetail.Items)
                                            {
                                                if (item.slogan)
                                                {
                                                    sloganClass = "slogan-level";
                                                }
                                                else
                                                {
                                                    sloganClass = "";
                                                }
                                                if (item.Value == Model.GenericDetailLevel.DefaultDetail.SelectedId)
                                                {
                                                    <option value="@item.Value" selected class="@sloganClass">@item.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Value" class="@sloganClass">@item.Text</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="panel-primary panel-options-results">
                            <div class="panel-heading head-options-results">
                                <p class="panel-title options ">
                                    @GestionWeb.GetWebWord(1896, Model.SiteLanguage)
                                </p>
                            </div>
                            <div id="collapseNine" class="panel-collapse collapse in">
                                <div class="panel-body mi-padder">
                                    <small class="pader-v-mi">@GestionWeb.GetWebWord(1897, Model.SiteLanguage)</small><button id="remove-custom-detail-levels" class="btn btn-sans pull-right" title="@GestionWeb.GetWebWord(1951, Model.SiteLanguage)"><i class="glyphicon glyphicon-trash"></i></button>
                                    <div class="selectoptioncontainer">
                                        <select id="@Model.GenericDetailLevel.CustomDetail.Id" class="selectdatepicker">
                                            @foreach (var item in Model.GenericDetailLevel.CustomDetail.Items)
                                            {
                                                if (item.slogan)
                                                {
                                                    <option value="@item.Value" class="slogan-level">@item.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Value">@item.Text</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <small class="pader-v-mi">@GestionWeb.GetWebWord(1899, Model.SiteLanguage)</small><button id="save-custom-detail-levels" class="btn btn-sans pull-right" title="@GestionWeb.GetWebWord(1990, Model.SiteLanguage)"><i class="glyphicon glyphicon-floppy-save"></i></button>
                                    <div class="selectoptioncontainer">
                                        <select id="@Model.GenericDetailLevel.L1Detail.Id" class="selectdatepicker">
                                            @foreach (var item in Model.GenericDetailLevel.L1Detail.Items)
                                            {
                                                if (item.slogan)
                                                {
                                                    <option value="@item.Value" class="slogan-level">@item.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Value">@item.Text</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <div class="selectoptioncontainer">
                                        <select id="@Model.GenericDetailLevel.L2Detail.Id" class="selectdatepicker">
                                            @foreach (var item in Model.GenericDetailLevel.L2Detail.Items)
                                            {
                                                if (item.slogan)
                                                {
                                                    <option value="@item.Value" class="slogan-level">@item.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Value">@item.Text</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <div class="selectoptioncontainer">
                                        <select id="@Model.GenericDetailLevel.L3Detail.Id" class="selectdatepicker">
                                            @foreach (var item in Model.GenericDetailLevel.L3Detail.Items)
                                            {
                                                if (item.slogan)
                                                {
                                                    <option value="@item.Value" class="slogan-level">@item.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Value">@item.Text</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <div class="selectoptioncontainer">
                                        <select id="@Model.GenericDetailLevel.L4Detail.Id" class="selectdatepicker">
                                            @foreach (var item in Model.GenericDetailLevel.L4Detail.Items)
                                            {
                                                if (item.slogan)
                                                {
                                                    <option value="@item.Value" class="slogan-level">@item.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Value">@item.Text</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="padder-btn btn-options pull-right">
                        <button id="validate-options" class="btn btn-valider">@GestionWeb.GetWebWord(3040, Model.SiteLanguage)&nbsp;<i class="fa fa-check"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

