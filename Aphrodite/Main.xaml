<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" x:Class="Aphrodite.Main"
    Title="Aphrodite" Height="400" Width="600" Loaded="Window_Loaded" Background="#FF333333" Margin="10"  Closing="Window_Closing" mc:Ignorable="d">
    <Grid x:Name="MainGrid" ShowGridLines="False">
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="*"/>
    	</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
    	<DockPanel Grid.Column="0" Grid.Row="0">
    		<ListView x:Name="_eventsListView" Margin="10" ItemsSource="{Binding}" Height="Auto" MaxHeight="400">
    			<ListView.View >
    				<GridView AllowsColumnReorder="False">
    					<GridViewColumn CellTemplate="{StaticResource EventTemplate}" Width="Auto">
							<TextBlock Text="!"/>
						</GridViewColumn>
                        <GridViewColumn  DisplayMemberBinding="{Binding Path=Message}" Width="Auto">
							<GridViewColumnHeader>
								<TextBlock Text="Event"/>
							</GridViewColumnHeader>
						</GridViewColumn>
    				</GridView>
    			</ListView.View>
    		</ListView>
		</DockPanel>       
    </Grid>
</Window>
